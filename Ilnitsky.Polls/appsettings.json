{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3306;Database=PollsMono3L;User=root;Password=1234;"
  },
  "AllowedHosts": "*",
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Debug",
      "Serilog.Sinks.Seq",
      "Serilog.Sinks.Grafana.Loki",
      "Serilog.Expressions"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        // Скрываем шум от системных библиотек .NET (DI, работа с сетью и т.д.)
        "System": "Warning",

        // Скрываем отладочные логи от большинства библиотек Microsoft
        "Microsoft": "Information",

        // Скрываем шум для ASP.NET Core (чтобы не видеть каждый HTTP-запрос в Debug)
        "Microsoft.AspNetCore": "Warning",

        // Оставляем важные сообщения о запуске и остановке приложения
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        // Вывод логов в отдельный сервер логирования Loki/Grafana
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://localhost:3100",
          "labels": [ // Статические метки
            {
              "key": "app",
              "value": "Ilnitsky.Polls.Mono3L"
            },
            {
              "key": "environment",
              "value": "Development"
            }
          ],
          "propertiesAsLabels": [ // Динамические свойства лога которые должны превратиться индексируемые метки Loki
            "EnvironmentName",
            "MachineName"
          ]
        }
      },
      {
        // Вывод логов в отдельный сервер логирования Seq
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      },
      {
        // Вывод в окно Output в VisualStudio
        "Name": "Debug",
        "Args": {
          "outputTemplate": "{CustomUtcTimestamp} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        // Вывод в отдельное окно консоли
        "Name": "Console",
        "Args": {
          "outputTemplate": "{CustomUtcTimestamp} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        // Вывод всего подряд в один (за день) файл
        "Name": "File",
        "Args": {
          "path": "Logs/log_.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 60,
          "outputTemplate": "{CustomUtcDateTime} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        // Вывод только в файл только сообщений об ошибках
        "Name": "File",
        "Args": {
          "path": "Logs/Errors/errors_.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 60,
          "outputTemplate": "{CustomUtcDateTime} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Warning"
        }
      },
      {
        // Вывод только в файл только информационных сообщений (уровня Information и ниже)
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "FilterByLevel",
                "ByIncludingOnly": {
                  "expression": "@Level in ['Information', 'Debug', 'Verbose']"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "Logs/Info/info_.txt",
                  "rollingInterval": "Day",
                  "retainedFileCountLimit": 60,
                  "outputTemplate": "{CustomUtcDateTime} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
                }
              }
            ]
          }
        }
      }
    ]//,
    //"Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName" ]
  }
}
