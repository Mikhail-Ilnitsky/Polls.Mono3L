{
  "AllowedHosts": "*",
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Seq",
      "Serilog.Sinks.Grafana.Loki",
      "Serilog.Expressions"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        // Сообщения системных библиотек .NET (DI, работа с сетью и т.д.)
        "System": "Warning",
        // Сообщения от большинства библиотек Microsoft
        "Microsoft": "Warning",
        // Сообщения от EF Core
        "Microsoft.EntityFrameworkCore": "Warning",
        // Сообщения от ASP.NET Core
        "Microsoft.AspNetCore": "Warning",
        // Сообщения от сервера
        "Microsoft.AspNetCore.Hosting": "Warning",
        // Сообщения проверок здоровья
        "Microsoft.AspNetCore.Diagnostics.HealthChecks": "Warning",
        // Сообщения о запуске и остановке приложения
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": {
      "SeqSink": {
        // Вывод логов в отдельный сервер логирования Seq
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      },
      "GrafanaLokiSink": {
        // Вывод логов в отдельный сервер логирования Loki/Grafana
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://localhost:3100",
          "labels": [ // Статические метки
            {
              "key": "app",
              "value": "Ilnitsky.Polls.Mono3L"
            },
            {
              "key": "environment",
              "value": "Development"
            }
          ],
          "propertiesAsLabels": [ // Динамические свойства лога которые должны превратиться индексируемые метки Loki
            "EnvironmentName",
            "MachineName"
          ]
        }
      }
    }
  }
}
