ini

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true


[*.{mjs,js,jsx,ts,tsx,vue,htm,html,svg,json}]
indent_style = space
indent_size = 2


[*.csproj]
indent_style = space
indent_size = 2


[*.{cs,cshtml,razor}]
indent_style = space
indent_size = 4
# Отключаем BOM для C# файлов
dotnet_style_encoding = utf-8_without_bom:warning